{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with .env.development",
      "program": "${workspaceFolder}/dist/mcp/web.js",
      "env": {
        "ADS_URL": "./ads/ads.json"  
      }
    },
    {
      "name": "Debug All Vitest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "--run"
      ],
      "autoAttachChildProcesses": true,
      "smartStep": true,
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}